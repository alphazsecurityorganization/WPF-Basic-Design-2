<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:local="clr-namespace:Test"
 mc:Ignorable="d"
        Title="Alpha Z Security" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="red" />
        <Rectangle Grid.Row="2" Fill="CadetBlue"/>

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Menu>
                <MenuItem Header="File" FontFamily="Calisto MT"  FontSize="16">
                    <MenuItem Header="Exit" Click="MenuItem_Click_1"></MenuItem>
                </MenuItem>
                <MenuItem Header="Edit" FontFamily="Calisto MT"  FontSize="16" />
            </Menu>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="33" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBox Width="180" Grid.Column="1" FontSize="10" Margin="2" Name="text"/>
                <Button Width="33" Grid.Column="3" FontSize="10" Content="Click" Margin="1" Click="Button_Click"/>
            </Grid>
        </Grid>

    </Grid>

</Window>